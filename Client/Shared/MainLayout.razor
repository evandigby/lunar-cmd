@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <MainContainer>
            <HeaderRegion>
                <Header>
                    <BrandingRegion>
                        <Branding>
                            <CustomIcon>
                                <img src="img/oneGiantLeap.svg" alt="Logo" style="padding:4px;height:5vh;">
                            </CustomIcon>
                            <ChildContent>ONE GIANT LEAP - LUNAR C&C</ChildContent>
                        </Branding>
                    </BrandingRegion>
                    <Actions>
                        <NavItem Icon="user" href="/authentication/login">
                        </NavItem>
                    </Actions>
                </Header>
            </HeaderRegion>
            <SideNavigationRegion>
                <VerticalNav HasIcons="true">
                    <NavItem Icon="users">
                        <a href=@CurrentMissionPath>Current Mission</a>
                    </NavItem>
                    <NavItem Icon="file-settings">
                        <ChildContent>
                            <a href="/mission-settings">Mission Settings</a>
                        </ChildContent>
                    </NavItem>
                    <NavItem Icon="user">
                        <ChildContent>
                            <a href="/user-settings">User Settings</a>
                        </ChildContent>
                    </NavItem>
                    <NavItem Icon="info-standard">
                        <ChildContent>
                            <a href="/about">About</a>
                        </ChildContent>
                    </NavItem>
                </VerticalNav>
            </SideNavigationRegion>
            <ContentArea>
                @Body
            </ContentArea>
        </MainContainer>
    </Authorized>
    <NotAuthorized>
        @Body
    </NotAuthorized>
</AuthorizeView>

<style>
    a {
        text-decoration: none;
    }
</style>


@code {
    public Guid CurrentMissionID { get; set; } = Guid.Empty;

    private string CurrentMissionPath => $"/mission/{CurrentMissionID}";

}