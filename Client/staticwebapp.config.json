{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*.{png,jpg,gif}",
      "/css/*"
    ]
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/api/*",
      "allowedRoles": [ "contributor" ]
    },
    {
      "route": "/*",
      "allowedRoles": [ "authenticated" ]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302,
      "exclude": [ "/api/*" ]
    }
  }
}