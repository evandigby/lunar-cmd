{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/images/*.{png,jpg,gif}",
      "/css/*"
    ]
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/api/*",
      "allowedRoles": [
        "authenticated"
      ]
    },
    {
      "route": "/login",
      "allowedRoles": [ "anonymous" ],
      "redirect": "/.auth/login"
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login",
      "statusCode": 302,
      "exclude":  ["/api/*"]
    }
  }
}